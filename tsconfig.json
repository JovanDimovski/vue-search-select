{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/types",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
